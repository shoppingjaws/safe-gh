{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Safe GH Configuration",
  "description": "Configuration file for safe-gh. Rules are evaluated in order; first matching rule applies.",
  "type": "object",
  "properties": {
    "allowedOwners": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Global restriction: only allow operations on repos owned by these users/organizations."
    },
    "issueEdit": {
      "type": "array",
      "default": [],
      "items": { "$ref": "#/$defs/issueRule" },
      "description": "Rules for issue edit operations."
    },
    "issueComment": {
      "type": "array",
      "default": [],
      "items": { "$ref": "#/$defs/issueRule" },
      "description": "Rules for issue comment operations."
    },
    "selfUserId": {
      "type": "string",
      "description": "GitHub login name for \"createdBy\": \"self\" / \"assignee\": \"self\" conditions. Get with: gh api user --jq .login"
    },
    "defaultPermission": {
      "type": "string",
      "const": "deny",
      "default": "deny",
      "description": "Default behavior when no rule matches. Only \"deny\" is supported."
    }
  },
  "additionalProperties": false,
  "$defs": {
    "labelCondition": {
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "items": { "type": "string" }
        },
        "exclude": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "issueCondition": {
      "type": "object",
      "properties": {
        "createdBy": {
          "type": "string",
          "const": "self"
        },
        "assignee": {
          "type": "string",
          "const": "self"
        },
        "labels": { "$ref": "#/$defs/labelCondition" },
        "repos": {
          "type": "array",
          "items": { "type": "string" }
        },
        "owners": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Restrict to repositories owned by these users/organizations."
        }
      },
      "additionalProperties": false
    },
    "issueRule": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "condition": { "$ref": "#/$defs/issueCondition" }
      },
      "additionalProperties": false
    }
  }
}
